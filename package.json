{
  "name": "astro-microcms-template",
  "type": "module",
  "version": "0.0.1",
  "scripts": {
    "dev": "astro dev",
    "dev:host": "astro dev --host",
    "dev:staging": "astro dev --mode=staging",
    "build": "pnpm run fetch-data && astro build",
    "build:local": "astro build",
    "build:staging": "astro build --mode=staging",
    "build:dummy": "pnpm run generate-dummy-json && astro build",
    "preview": "astro preview",
    "fetch-data": "tsx src/data/scripts/fetch-data.ts",
    "generate-dummy-json": "tsx src/data/scripts/generate-dummy-json/index.ts",
    "lint": "astro sync && pnpm run \"/^lint:.*/\"",
    "lint:astro": "astro check",
    "lint:eslint": "eslint --max-warnings 0",
    "lint:prettier": "prettier --check .",
    "fix": "node --run fix:eslint && node --run fix:prettier",
    "fix:eslint": "node --run lint:eslint -- --fix",
    "fix:prettier": "node --run lint:prettier -- --write",
    "test": "vitest",
    "astro": "astro"
  },
  "dependencies": {
    "@astrojs/sitemap": "^3.6.0",
    "@tailwindcss/vite": "^4.1.17",
    "@vercel/edge": "^1.2.2",
    "alpinejs": "^3.15.2",
    "astro": "^5.16.6",
    "astro-icon": "^1.1.5",
    "gsap": "^3.14.2",
    "lenis": "^1.3.17",
    "microcms-js-sdk": "^3.2.0",
    "prettier-plugin-astro-organize-imports": "^0.4.11",
    "tailwindcss": "^4.1.17"
  },
  "devDependencies": {
    "@alpinejs/intersect": "^3.15.2",
    "@alpinejs/persist": "^3.15.2",
    "@astrojs/check": "^0.9.6",
    "@eslint/js": "^9.39.2",
    "@fontsource-variable/noto-sans-jp": "^5.2.9",
    "@types/alpinejs": "^3.13.11",
    "@types/alpinejs__intersect": "^3.13.4",
    "@types/alpinejs__persist": "^3.13.4",
    "@types/gsap": "^3.0.0",
    "dotenv": "^17.2.3",
    "eslint": "^9.39.1",
    "eslint-plugin-astro": "^1.5.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "prettier": "^3.7.3",
    "prettier-plugin-astro": "^0.14.1",
    "prettier-plugin-css-order": "^2.1.2",
    "prettier-plugin-organize-imports": "^4.3.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.50.0",
    "vite": "^7.3.1",
    "vitest": "^4.0.15"
  }
}
